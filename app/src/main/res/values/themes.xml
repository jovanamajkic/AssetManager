<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.AssetsManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green_300</item>
        <item name="colorSecondaryVariant">@color/light_green_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurfaceVariant">@color/light_grey</item>
    </style>

    <style name="Theme.AssetsManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AssetsManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AssetsManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchViewStyle">
        <item name="android:layout_marginBottom">@dimen/field_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="RecyclerListStyle">
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:layout_marginTop">@dimen/field_margin</item>
        <item name="android:layout_marginBottom">@dimen/recycler_margin</item>
    </style>

    <style name="RecyclerItemStyle" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_view</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/card_view</item>
    </style>

</resources>